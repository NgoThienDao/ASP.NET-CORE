@model NgoThienDao.TrungTamNgoaiNgu.Models.Request.Student.StudentEdit
@using NgoThienDao.TrungTamNgoaiNgu.Models.Reponse.Male
@using NgoThienDao.TrungTamNgoaiNgu.Models.Reponse.Level
@using NgoThienDao.TrungTamNgoaiNgu.Models.Reponse.Language

@{
    ViewData["Title"] = "Edit";
    var males = new List<MaleView>();
    males = ViewBag.Males;
    var levels = new List<LevelView>();
    levels = ViewBag.Levels;
    var languages = new List<LanguageView>();
    languages = ViewBag.Languages;
}

<h1>Sửa thông tin sinh viên</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="btn btn-outline-light" style="margin-bottom: 20px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ID" class="form-control" />
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDLanguage" class="control-label"></label>
                <select asp-for="IDLanguage" class="form-control" />
                    @foreach (var language in languages)
                    {
                        <option value="@language.Value">@language.Name</option>
                    }
                <select />
                <span asp-validation-for="IDLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDLevel" class="control-label"></label>
                <select asp-for="IDLevel" class="form-control" />
                @foreach (var level in levels)
                {
                    <option value="@level.Value">@level.Name</option>
                }
                <select />
                <span asp-validation-for="IDLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDMale" class="control-label"></label>
                <select asp-for="IDMale" class="form-control" />
                @foreach (var male in males)
                {
                    <option value="@male.Value">@male.Name</option>
                }
                <select />
                <span asp-validation-for="IDMale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
